<Window x:Name="MainWindow1" x:Class="WPFScreenBrightness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFScreenBrightness"
        mc:Ignorable="d"
        Title="MainWindow" Height="217" Width="50" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" WindowStartupLocation="CenterScreen">
    <Border x:Name="mainBorder" CornerRadius="5" Background="#7F000000">
        <Grid x:Name="mainGrid">
            <Slider x:Name="slider" HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="31.46" RenderTransformOrigin="0.5,0.5" Margin="0" SmallChange="1" Maximum="15" ValueChanged="slider_ValueChanged" Background="#FFBDFF00" Orientation="Vertical" Value="12" LargeChange="5" Cursor="Hand" UseLayoutRounding="False" TickPlacement="Both" Foreground="#FF7F7F7F"/>

        </Grid>
    </Border>
</Window>
